APP_NAME="D&D Assistant"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

APP_LOCALE=ru
APP_FALLBACK_LOCALE=ru
APP_FAKER_LOCALE=ru_RU

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=dnd_assistant
DB_USERNAME=dnd_user
DB_PASSWORD=secret

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local

# Reverb WebSocket Server
REVERB_APP_ID=dnd-assistant
REVERB_APP_KEY=dnd-reverb-key
REVERB_APP_SECRET=dnd-reverb-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Reverb connection for frontend (use public URL in production)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Queue - use 'redis' for production, 'sync' for immediate execution in dev
QUEUE_CONNECTION=redis

# Cache
CACHE_STORE=redis

# Redis
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=4
REDIS_CACHE_DB=5

# Mail - Local development (Mailpit)
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@dnd-assistant.local"
MAIL_FROM_NAME="${APP_NAME}"

# AWS - Required for S3/CloudFront in production
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=dnd-assistant-media
AWS_USE_PATH_STYLE_ENDPOINT=false

# CloudFront CDN URL (production only)
# CLOUDFRONT_URL=https://xxxxx.cloudfront.net

# Storage disks
# Local: FILESYSTEM_DISK=local, MEDIA_DISK=public
# Production: FILESYSTEM_DISK=s3, MEDIA_DISK=s3_public
FILESYSTEM_DISK=local
MEDIA_DISK=public

# Owner account (created by seeder)
OWNER_NAME="Dungeon Master"
OWNER_EMAIL=dm@dnd-assistant.local
OWNER_PASSWORD=secret123

VITE_APP_NAME="${APP_NAME}"
